<% include ./partials/header %>
<div class="jumbotron text-center " > <h1 class="display-1">JBM Blog</h1></div>
<%posts.forEach(function(post){%>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title"><%= post.title %></h1>
            <h3 class="card-text"><%=post.createdtime.toDateString()%></h3>
        </div>
        <card><img src="<%=post.img%>" />
        <p><%=post.body.substring(0,100)%>.....</p>
        <a href="/blog/<%=post._id%>" class="btn btn-primary ">more info</a>
    </div>
<div>
    <br/>
<% }) %>
<% include ./partials/footer %>
